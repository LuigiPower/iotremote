<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <!-- TODO check old versions of android -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="StandardText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <!-- TODO check old versions of android -->
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="StandardText.Drawer" parent="StandardText">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="UnsafeButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>
